drop table if exists users; 
drop table if exists Todos;
drop table if exists tags;

create table users(
user_id int not null unique,
username varchar(20)
);

create table todos(
todo_id int not null,
title varchar(200),
isdone bit,
date varchar(15),
user_id varchar(200),
tag_id varchar(200)
);

create table tags(
tag_id int not null,
tag_name varchar(200)
);

